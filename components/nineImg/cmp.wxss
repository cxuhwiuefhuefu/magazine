.container {
    width: 700rpx;
}

.img-container {
    position: relative;
    display: flex;
    flex-wrap: wrap; /* 定义一条轴排列不下 如何换行 */
    justify-content: space-between; /* 两端对齐 项目之间的间隔都相等 */
    width: 700rpx;
    height: 700rpx;
    overflow: hidden;
}

.image {
    width: 31%;
    height: 31%;
}

.img-num {
    position: absolute;
    right: 80rpx;
    bottom: 80rpx;
    padding: 5rpx 10rpx;
    background-color: rgba(0, 0, 0, .7);
    color: #fff;
    font-size: 24rpx;
}

.text-container {
    padding: 0 30rpx;
    font-size: 40rpx;
    font-weight: 400;
    letter-spacing: 2rpx;
}